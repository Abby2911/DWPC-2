<div class="row">
    <div class="col s12 m10 offset-m1 18 offset-12">
        <div class="card">
            <div class="card-image">
                <img src="/images/addproject.png" alt="Imagen cracion de proyecto">
                <span 
                    class="card-title add-project"
                    style="font-weight: bolder;">
                    Crear Proyecto
                    </span>
            </div>
            <form autocomplete="off" action="/project/add" method="post">
            <div class="card-content">
                <div class="input-field">
                    <label for="project-name">
                        Nombre del proyecto
                    </label>
                    <input 
                    type="text"
                    id="project-name"
                    name="name"
                    placeholder="Ingrese nombre del proyecto"
                    class="validate"
                    value="{{ project.name }}"required
            />
            <span 
              class="helper-text"
              data-error="Es necesario ingresar el nombre del proyecto"
              data-success="✅ Correcto"
              ></span>
  {{#if errorModel.name }}
    <span style="color: crimson;">Error: {{ errorModel.name }}</span>
  {{/if}}
                </div>
                <div class="input-field"></div>
                <label for="project-description">
                        Descripcion del proyecto
                    </label>
                    <textarea 
                    name="description"
                    id="project-description"
                    placeholder="Ingrese descripcion del proyecto"
                   class="materialize-textarea validate" required>{{project.description}}</textarea>
              <span 
              class="helper-text"
              data-error="Debe ingresar una descripción"
              data-success="✅ Correcto"
              ></span>    
            </div>
            <div class="card-action">
                <button class="blue darken-3 waves-effect waves-light btn">
                    <i class="material-icons left">note_add</i>AGREGAR
                </button>
            </div>
            </form>
        </div>
    </div>
</div>